<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_progress_dialog_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/shape_common_toast_light_bg"
    android:gravity="center"
    android:minWidth="50dp"
    android:minHeight="80dp"
    android:orientation="vertical"
    android:padding="10dp">
    <!-- android:background="@drawable/widget_loading_dialog_bg" -->
    <!-- android:background="@drawable/shape_common_toast_bg" -->

    <ImageView
        android:id="@+id/widget_progress_dialog_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/widget_loading_progress_white_medium" />

    <TextView
        android:id="@+id/widget_progress_dialog_tipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="0dp"
        android:text="@string/str_bl_loading"
        android:textColor="@color/white" />

</LinearLayout>